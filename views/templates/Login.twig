{% extends "base.twig" %}

{% block head %}
    {{ parent() }}
{% endblock %}

{% block content %}

    <div id="Landing">

        <div class="container">
            <div class="row">
                <div class="col-md-8 col-md-offset-2">
                    <div class="panel panel-login">
                        <div class="panel-heading">
                            <div class="row">
                                <div class="col-xs-12">
                                	<h4>Welcome, please provide your App Key to login</h4>
                                </div>
                            </div>
                            <hr>
                        </div>
                        <div class="panel-body">
                            <div class="row">
                                <div class="col-lg-12">
                                    <form id="login-form" action="{{ siteConfigs['website_www'] }}/login" method="post" class="toggle-disabled">
                                        <div class="form-group">
	                                        <div class="input-group">
                                                <span class="input-group-addon"><i class="glyphicon glyphicon-globe"></i></span>
	                                            <select name="environment"  tabindex='1' class="form-control selectpicker show-tick show-menu-arrow" title="Select Environment.."  data-validation="required">
	                                            	<optgroup label="Environment">
	                                                {% for env in siteConfigs.cloudEnvs %}
	                                                    <option>{{ env }}</option>  
	                                                {% endfor %}
	                                                </optgroup>
	                                            </select>
                                            </div>
                                        </div>
                                        <div class="form-group">
                                            <div class="row">
	                                            <div class="col-lg-8">
	                                                <div class="input-group">
	                                                <span class="input-group-addon"><i class="glyphicon glyphicon-lock"></i></span>
	                                                    <input type="text" name="app-id" id="app-id" tabindex="2" class="form-control" placeholder="Enter AppID / ClientID" value="" data-sanitize="trim insertLeft" data-sanitize-insert-left="app_" data-validation="required exactly26chars appIdRegex " />
	                                                </div>
                                                </div>    
                                                <div class="col-lg-4 float-right">
	                                                <div class="input-group" >
	                                                	<button type="submit" tabindex="3"  class="btn btn-primary login-btn form-control">Submit</button>
	                                                	<span class="input-group-addon"><i class="glyphicon glyphicon-log-in"></i></span>
	                                                </div>
                                                </div>
                                            </div>
                                        </div>
                                    </form>
                                </div>
                            </div>
                            {% include 'dismissAlert.twig' %}
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

{% endblock %}
